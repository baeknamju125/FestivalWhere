<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lineframe"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/oneday_topGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/onday_dayTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"
            android:textSize="20sp" />

        <View
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/onday_moonTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lineframe"
            android:text="음 00.16"
            android:textSize="10sp"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/onday_msgTv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/oneday_topGroup"
        android:background="@drawable/lineframe"
        android:text="@string/app_name" />

    <ImageView
        android:id="@+id/onday_festival"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/festival_icon"
        android:src="@drawable/festival_check_none" />

</RelativeLayout>